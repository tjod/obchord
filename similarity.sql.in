Create or Replace FUNCTION _SCHEMA_.euclid(bit, bit)
 Returns real AS '
Select sqrt((_SCHEMA_.nbits_set($1 & $2) + _SCHEMA_.nbits_set(~$1 & ~$2))::real /
  length($1))::real;
' LANGUAGE sql IMMUTABLE;
Comment On FUNCTION _SCHEMA_.euclid(bit, bit)
 Is 'standard euclid similarity of fingerprints';

Create or Replace FUNCTION _SCHEMA_.hamming(bit, bit)
 Returns real AS '
Select ((_SCHEMA_.nbits_set($1 & ~$2) + _SCHEMA_.nbits_set(~$1 & $2))::real /
   length($1))::real;
' LANGUAGE sql IMMUTABLE;
Comment On FUNCTION _SCHEMA_.hamming(bit, bit)
 Is 'standard hamming similarity of fingerprints';

Create or Replace FUNCTION _SCHEMA_.tversky(bit, bit, real, real)
 Returns real AS '
Select _SCHEMA_.nbits_set($1 & $2)::real /
  ($3*_SCHEMA_.nbits_set($1 & ~$2) + $4*_SCHEMA_.nbits_set($2 & ~$1) +
      _SCHEMA_.nbits_set($1 & $2))::real;
' LANGUAGE sql IMMUTABLE;
Comment On FUNCTION _SCHEMA_.tversky(bit, bit, real, real)
 Is 'standard tversky similarity of fingerprints';

Create or Replace FUNCTION _SCHEMA_.similarity(bit, bit)
 Returns real AS '
Select _SCHEMA_.tversky($1, $2, 0.5, 0.5);
' LANGUAGE sql IMMUTABLE;
Comment On FUNCTION _SCHEMA_.similarity(bit, bit)
 Is 'standard dice similarity of fingerprints';
                                                                                
Create or Replace FUNCTION _SCHEMA_.similarity(Text, Text)
 Returns real AS '
Select _SCHEMA_.tversky(_SCHEMA_.public166keys($1), _SCHEMA_.public166keys($2), 0.5, 0.5);
' LANGUAGE sql IMMUTABLE;
Comment On FUNCTION _SCHEMA_.similarity(Text, Text)
 Is 'standard dice similarity of smiles using public166key';
